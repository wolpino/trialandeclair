@using TandE.Models
@model TandE.Models.RecipeIngredient

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>RecipeIngredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeID" class="control-label"></label>
                <select asp-for="RecipeID" class ="form-control" asp-items="ViewBag.RecipeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="IngredientID" class="control-label"></label>
                <select asp-for="IngredientID" class ="form-control" asp-items="ViewBag.IngredientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Measurement" class="control-label"></label>
                <input asp-for="Measurement" class="form-control" />
                <span asp-validation-for="Measurement" class="text-danger"></span>
            </div>
            @Html.DropDownListFor(m => m.Unit, new SelectList(Enum.GetValues(typeof(Unit))), "Choose Unit")
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
