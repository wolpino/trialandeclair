@model TandE.Models.TEViewModels.RecipeViewModel

<h4>RecipeIngredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddIng" asp-controller="RecipeIngredients">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipeIngredient.RecipeID" class="control-label"></label>
                <select asp-for="RecipeIngredient.RecipeID" class ="form-control" asp-items="ViewBag.RecipeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecipeIngredient.IngredientID" class="control-label"></label>
                <select asp-for="RecipeIngredient.IngredientID" class ="form-control" asp-items="ViewBag.IngredientID"></select>
            </div>
            <div class="form-group">
                <label asp-for="RecipeIngredient.Measurement" class="control-label"></label>
                <input asp-for="RecipeIngredient.Measurement" class="form-control" />
                <span asp-validation-for="RecipeIngredient.Measurement" class="text-danger"></span>
            </div>
            @Html.DropDownListFor(m => m.RecipeIngredient.Unit, new SelectList(Enum.GetValues(typeof(Unit))), "Choose Unit")
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
