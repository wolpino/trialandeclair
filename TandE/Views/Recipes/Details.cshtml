@model TandE.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RecipeName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RecipeName)
        </dd>
@if (Model.RefURL2 != null)
{
        <dt>
            @Html.DisplayNameFor(model => model.RefURL2)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RefURL2)
        </dd>
}
        <dt>
            @Html.DisplayNameFor(model => model.RefURL3)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefURL3)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RefURL4)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefURL4)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.VersionNotes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.VersionNotes)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Method)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Method)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        @foreach (var ingred in Model.Ingredients)
        {
        <dd>
            <p>@ingred.Measurement @ingred.Unit  @ingred.Ingredient.IngredientName</p>
        </dd>
        }

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RecipeID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
